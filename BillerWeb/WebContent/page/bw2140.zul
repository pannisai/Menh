<?page id="pBw2140" title="Receipt Map ID" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<zk>

	<vlayout id="bw2140" hflex="1" vflex="1" style="min-height:600px"
		apply="com.dtac.billerweb.controller.BW2140Controller">
		<!-- Title -->
		<hlayout style="text-align:center">
			<label id="title" value="${labels.BW2140_NEW_TITLE}"
				sclass="pageTitle" />
		</hlayout>
		<hlayout style="text-align:center;" vflex="1">
			<vbox width="70%" vflex="1" align="center"
				sclass="vboxEdit">
				<grid vflex="1" sclass="editGrid">
					<columns visible="false">
						<column width="5%">Blank</column>
						<column width="15%">a</column>
						<column width="3%">:</column>
						<column width="25%">C</column>
						<column width="5%">Blank</column>
						<column width="15%">a</column>
						<column width="3%">:</column>
						<column width="25%">C</column>
						<column width="4%">Blank</column>
					</columns>
					<rows>
						<!-- MAP ID -->
						<row>
							<hlayout style="text-align:left;">
								<label value="" />
							</hlayout>
							<hlayout style="text-align:left;">
								<label sclass="editLabel">MAP ID</label>
							</hlayout>
							<hlayout style="text-align:center;">
								<label sclass="editLabel">:</label>
							</hlayout>
							<hlayout style="text-align:left;">
								<intbox id="intMapId"
